{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "rules": {
    // ===== Reglas desactivadas (seg√∫n tu preferencia) =====
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "no-console": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-empty-interface": "off",
    "prefer-const": "off",
    "@typescript-eslint/ban-types": "off",
    "@next/next/no-img-element": "off",
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "react/display-name": "off",
    "react/no-unescaped-entities": "off",

    // ===== Reglas recomendadas (ajustables) =====
    "react/jsx-no-target-blank": "warn",         // Advertencia si usas target="_blank" sin rel="noopener"
    "@typescript-eslint/no-floating-promises": "warn",  // Detecta promesas no manejadas
    "react-hooks/exhaustive-deps": "warn"        // Advertencia para dependencias faltantes en useEffect
  }
}